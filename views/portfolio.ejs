<section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col mb-5 text-center">
        <h2>Portfolio</h2>
        <p>The cakes I have baked for my clients.</p>
      </div>
    </div>
    
    <!-- Filter Buttons -->
    <div class="row">
      <div class="col-xs-12 mx-auto mb-5">
        <button class="btn active" onclick="filterSelection('all')"> Show all</button>
        <button class="btn" onclick="filterSelection('wedding')">Wedding cakes</button>
        <button class="btn" onclick="filterSelection('christmas')"> Christmas cakes</button>
        <button class="btn" onclick="filterSelection('birthday')"> Birthday cakes</button>
        <button class="btn" onclick="filterSelection('anniversary')"> Anniversary cakes</button>
      </div>
    </div>
    
    <!-- Cake Grid -->
    <div class="row grid">
      <% cakes.forEach(function(cake) { %>
        <div class="hide col-lg-4 col-md-6 col-sm-12 <%= cake.category %>">
          <div class="text-center">
            <img class="mb-3" src="<%= cake.image %>" alt="<%= cake.alt %>" style="width:100%">
            <h4><%= cake.header %></h4>
            <p><%= cake.description %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<script>
  // Function to filter cakes by category
  function filterSelection(category) {
    var elements = document.getElementsByClassName('grid')[0].children;
    for (var i = 0; i < elements.length; i++) {
      if (category === 'all' || elements[i].classList.contains(category)) {
        elements[i].style.display = 'block';
      } else {
        elements[i].style.display = 'none';
      }
    }
  }

  // Call filterSelection('all') by default to show all cakes
  filterSelection('all');
</script>
